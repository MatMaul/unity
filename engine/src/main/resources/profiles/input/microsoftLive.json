{
	"ver": "2",
	"name": "sys:microsoftLive",
	"description": "Translation profile for microsoft live  authn",
	"type": "INPUT",
	"rules": [
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapIdentity",
				"parameters": [
					"identifier",
					"attr['id']",
					"sys:all",
					"CREATE_OR_MATCH"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"name",
					"/",
					"attr['name']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"firstname",
					"/",
					"attr['first_name']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"surname",
					"/",
					"attr['last_name']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"profileURL",
					"/",
					"attr['link']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "(attr contains 'birth_day') && (attr contains 'birth_month') && (attr contains 'birth_year')"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"birthday",
					"/",
					"String.format('%02d', Integer.parseInt(attr['birth_day'])) + '/' +  String.format('%02d', Integer.parseInt(attr['birth_month'])) + '/' + attr['birth_year']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"company",
					"/",
					"attr['employer']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"email",
					"/",
					"attr['emails.account']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "attr contains 'phones.personal'"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"telephoneNumber",
					"/",
					"attr['phones.personal']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "attr contains 'phones.mobile'"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"mobile",
					"/",
					"attr['phones.mobile']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"locale",
					"/",
					"attr['locale']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "attr contains 'adrresses.personal'"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"address",
					"/",
					"attr['adrresses.personal.street'] + ',' + attr['adrresses.personal.street2'] + ',' + attr['adrresses.personal.city'] + ',' + attr['adrresses.personal.state'] + ',' + attr['adrresses.personal.postal_code'] + ',' + attr['adrresses.personal.region']",
					"CREATE_OR_UPDATE"
				]
			}
		}
		,
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"street",
					"/",
					"attr['adrresses.personal.street']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"postalCode",
					"/",
					"attr['adrresses.personal.postal_code']",
					"CREATE_OR_UPDATE"
				]
			}
		}
		,
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"city",
					"/",
					"attr['adrresses.personal.city']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"provinceName",
					"/",
					"attr['adrresses.personal.state']",
					"CREATE_OR_UPDATE"
				]
			}
		},
		{
			"condition": {
				"conditionValue": "true"
			},
			"action": {
				"name": "mapAttribute",
				"parameters": [
					"country",
					"/",
					"attr['adrresses.personal.region']",
					"CREATE_OR_UPDATE"
				]
			}
		}
	]
}